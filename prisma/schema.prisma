datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id              Int      @id @default(autoincrement())
  nome            String
  email           String   @unique
  data_nascimento DateTime
  confirmado      Boolean  @default(false)
  criado_em       DateTime @default(now())
}
